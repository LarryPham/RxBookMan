<?xml version="1.0" encoding="utf-8"?>
<com.capsule.apps.rxbookman.widgets.ScrimInsetsRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/navigation_header_width_size"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    app:insetForeground="@color/color_white"
    android:gravity="center_vertical">
    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navdrawer_header_margin_top"
        android:layout_marginBottom="@dimen/navdrawer_header_margin_bottom"
        android:layout_marginStart="@dimen/navdrawer_header_margin_left"
        android:gravity="center_vertical"
        tools:ignore="UselessParent">
        <com.capsule.apps.rxbookman.widgets.CircleImageView
            android:id="@+id/account_image"
            android:layout_width="@dimen/header_user_avatar_size"
            android:layout_height="@dimen/header_user_avatar_size"
            android:src="@drawable/larry"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_name_margin_top"
            android:layout_below="@+id/account_image">
            <com.capsule.apps.rxbookman.widgets.OpenTextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/color_primary"
                android:textStyle="bold"
                android:text="@string/account_name_sample"
                android:textAllCaps="true"
                app:fixWidowWords="true"
                app:fontVariation="book"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <com.capsule.apps.rxbookman.widgets.OpenTextView
                android:id="@+id/account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_14sp"
                android:layout_marginTop="@dimen/account_name_margin_bottom"
                android:textColor="@color/color_primary"
                android:textStyle="normal"
                android:text="@string/account_email_sample"
                android:layout_below="@+id/account_name"
                android:layout_alignStart="@+id/account_name"
                app:fixWidowWords="true"
                app:fontVariation="normal"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_half_dp"
        android:background="@color/color_header_divider"
        android:layout_alignParentBottom="true"/>
</com.capsule.apps.rxbookman.widgets.ScrimInsetsRelativeLayout>