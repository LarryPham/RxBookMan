<resources>
    <style name="BookMan.Theme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="BookMan.Widget" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme" parent="BookMan.Theme">
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/Widget.BookMan.EditText</item>
    </style>

    <style name="Theme.BookMan.Base" parent="Theme">
        <item name="actionBarIconColor">@color/color_action_bar_icon_color</item>
        <item name="actionBarInsetStart">@dimen/action_bar_inset_start</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/color_window_background</item>

        <item name="imageItemBackground">?android:selectableItemBackground</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="Theme.BookMan" parent="Theme.BookMan.Base"/>

    <style name="Widget.BookMan.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_on_primary</item>
        <item name="android:textColorSecondary">@color/subtitle_on_primary</item>
    </style>

    <style name="TwoWayViewBase">
        <item name="android:background">@color/color_transparent</item>
    </style>
</resources>
